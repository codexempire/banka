{
  "name": "banka",
  "version": "1.0.0",
  "description": "Banka is a light-weight core banking application that powers banking operations like account creation and help in the customer to monitor his\\her account and its transactions",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist",
    "build": "npm run clean && babel server -d dist",
    "clean": "rm -rf dist",
    "heroku-postbuild": "npm run build",
    "dev": "npm run migrations && nodemon --exec babel-node ./server/index.js",
    "test": "npm run migrations && nyc --reporter=html --reporter=text mocha --require babel-register ./test/*.js --timeout 50000 --exit && npm run drop-migrations",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "migrations": "babel-node ./server/migrations/index.js",
    "drop-migrations": "babel-node ./server/migrations/drop.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codexempire/banka.git"
  },
  "author": "princewill michael",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/codexempire/banka/issues"
  },
  "homepage": "https://github.com/codexempire/banka#readme",
  "dependencies": {
    "bcrypt": "^3.0.5",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "pg": "^7.9.0",
    "swagger-ui-express": "^4.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-env": "^2.4.1",
    "babel-polyfill": "^6.26.0",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.3",
    "eslint": "^5.15.3",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "mocha": "^6.0.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0"
  },
  "nodemonConfig": {
    "name": "nodemon",
    "homepage": "http://nodemon.io",
    "...": "... other standard package.json values",
    "nodemonConfig": {
      "ignore": [
        "test/*"
      ],
      "delay": "2500"
    }
  }
}
